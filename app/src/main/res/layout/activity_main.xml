<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.discrete.iseecs280available.MainActivity">

    <TextView
        android:id="@+id/enterCourseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Please enter the course you would like to view:"/>

    <RelativeLayout
        android:id="@+id/enterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterCourseMessage">
        <LinearLayout
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/departmentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Department:"/>

            <EditText
                android:id="@+id/enterDepartment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_toRightOf="@+id/departmentName"
                android:inputType="text"
                android:imeOptions="actionNext"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/courseNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Course:"/>

            <EditText
                android:id="@+id/enterCourseNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_toRightOf="@+id/courseNumber"
                android:inputType="number"
                android:imeOptions="actionDone"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/submitCourseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enterInfo"
        android:text="Submit" />

    <RelativeLayout
        android:id="@+id/courseDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitCourseInfo">
        <TextView
            android:id="@+id/courseDisplayHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="" />
        <TextView
            android:id="@+id/courseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text=""
            android:layout_below="@+id/courseDisplayHeader" />

    </RelativeLayout>

</RelativeLayout>
